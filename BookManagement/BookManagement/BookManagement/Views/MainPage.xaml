    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>


            <Label HorizontalOptions="FillAndExpand"                        
               FontFamily="{DynamicResource MaterialFontFamily}"
               Text="これはアイコンフォントの「 &#xFDFA; 」です。" />

            <Image Source="https://thumbnail.image.rakuten.co.jp/@0_mall/book/cabinet/3216\/9784798153216.jpg?_ex=200x200"/>



            <ImageButton Clicked="ScanButtonClicked"
                         Grid.Column="1"
                         Grid.Row="1"
                         x:Name="btn"
                         Padding="10"
                         CornerRadius="35"
                         WidthRequest="70"
                         HeightRequest="70"
                         VerticalOptions="Center"
                         HorizontalOptions="Center"
                         BackgroundColor="#FFABCE"
                         >
                <ImageButton.Source>
                    <FontImageSource
                        Color="white"
                        FontFamily="{DynamicResource MaterialFontFamily}"
                        Glyph="{StaticResource plus}"
                        />
                </ImageButton.Source>
            </ImageButton>
            
        </Grid>
    </ContentPage.Content>

